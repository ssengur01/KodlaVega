@{
    ViewData["Title"] = "Ödeme Sayfası";
    var publishableKey = ViewBag.PublishableKey as string ?? "";
}

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center py-3">
          <h4 class="mb-0">💳 Paynet Test Ödeme</h4>
        </div>
        <div class="card-body text-center p-4">
          <p class="text-muted mb-4">Sandbox test: 3D akışını görmek için butona tıklayın.</p>

         
          <form id="paynetForm" method="POST" action="/Payment/Return">
            <script class="paynet-button"
                    type="text/javascript"
                    src="https://pts-pj.paynet.com.tr/public/js/paynet.min.js"
                    data-key="@publishableKey"
                    data-amount="10000"
                    data-button_label="Ödeme Yap">
            </script>
          </form>

          <div id="result" class="mt-4"></div>
        </div>
        <div class="card-footer text-center small text-muted">
          Sandbox ödeme altyapısı <strong>Paynet</strong>.
        </div>
      </div>
    </div>
  </div>
</div>