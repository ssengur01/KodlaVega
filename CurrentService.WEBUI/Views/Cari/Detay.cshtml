@model CurrentService.WEBUI.Models.FaturaViewModel

@{
    ViewBag.Title = "Fatura Detayı";
}

<h2 class="mb-4 text-center">Fatura Detayı</h2>

@if (Model.AlFatBaslik != null)
{
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-success text-white fw-bold">
            Alış Faturası Başlık Bilgileri
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Belge No:</dt>
                <dd class="col-sm-9">@Model.AlFatBaslik.BelgeNo</dd>
                <dt class="col-sm-3">Tarih:</dt>
                <dd class="col-sm-9">@Model.AlFatBaslik.Tarih?.ToString("dd.MM.yyyy")</dd>
                <dt class="col-sm-3">Firma Adı:</dt>
                <dd class="col-sm-9">@Model.AlFatBaslik.FirmaAdi</dd>
                <dt class="col-sm-3">Ara Toplam:</dt>
                <dd class="col-sm-9">@Model.AlFatBaslik.AraToplam?.ToString("N2")</dd>
                <dt class="col-sm-3">Genel Toplam:</dt>
                <dd class="col-sm-9">@Model.AlFatBaslik.GenelToplam?.ToString("N2")</dd>
                <dt class="col-sm-3">Para Birimi:</dt>
                <dd class="col-sm-9">@Model.AlFatBaslik.ParaBirimi</dd>
                <dt class="col-sm-3">Kur:</dt>
                <dd class="col-sm-9">@Model.AlFatBaslik.Kur?.ToString("N2")</dd>
                <dt class="col-sm-3">Ödeme Tarihi:</dt>
                <dd class="col-sm-9">@Model.AlFatBaslik.OdemeTarihi?.ToString("dd.MM.yyyy")</dd>
            </dl>
        </div>
    </div>

    @if (Model.AlFatHareketler?.Any() == true)
    {
        <div class="table-responsive mt-3">
            <table class="table table-striped table-bordered">
                <thead class="table-success text-center">
                    <tr>
                        <th>Stok Kodu</th>
                        <th>Malın Cinsi</th>
                        <th>Miktar</th>
                        <th>Birim</th>
                        <th>Fiyatı</th>
                        <th>İndirim</th>
                        <th>KDV</th>
                        <th>KDV Tutarı</th>
                        <th>Satır Toplam</th>
                        <th>Açıklama</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var h in Model.AlFatHareketler)
                    {
                        <tr>
                            <td>@h.StokKodu</td>
                            <td>@h.MalinCinsi</td>
                            <td>@h.Miktar?.ToString("N2")</td>
                            <td>@h.Birim</td>
                            <td>@h.Fiyati?.ToString("N2")</td>
                            <td>@h.Indirim?.ToString("N2")</td>
                            <td>@h.Kdv</td>
                            <td>@h.KdvTutari?.ToString("N2")</td>
                            <td>@h.SatirToplam?.ToString("N2")</td>
                            <td>@h.Aciklama</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">Bu faturaya ait hareket bulunamadı.</div>
    }
}
